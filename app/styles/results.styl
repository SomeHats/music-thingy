@import 'nib'

#results
  width 740px
  margin auto
  list-style none
  padding 0
  font-size 26px

  li
    width 740px
    padding-bottom 20px
    display table
    text-shadow 0 1px 5px rgba(0, 0, 0, 0.6)
    transition all 0.5s ease
    opacity 1
    cursor pointer

  div
    display table-cell
    vertical-align middle
    width 100%

  h2
    margin-top 0
    margin-bottom 15px

  img
    float left
    box-shadow 0 0 10px rgba(0, 0, 0, 0.5)
    transform scale(0.95)
    margin-right 20px
    transition all 0.25s ease

  li:hover img
    transform scale(1)

  p
    opacity 1
    font-size 14px
    text-shadow 0 px 3px rgba(0, 0, 0, 0.6)
    position static
    transition all 0.5s ease
    margin 0

  a, a:hover
    color white

  a:hover
    text-decoration none
