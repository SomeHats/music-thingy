@import 'nib'

@keyframes DropInFade
  from
    opacity 0
    transform translateY(-200px)
  to
    opacity 1
    transform translateY(0)

@keyframes SlideUpFade
  from
    opacity 0
    transform translateY(200px)
  to
    opacity 1
    transform 0

.slideUpFade
  animation SlideUpFade 0.5s ease

#search
  font-size 52px
  font-weight 100
  text-align center
  text-shadow 0 1px 5px black

  h1
    margin 100px 0
    font-size 140px
    font-weight 100
    line-height 100px
    text-shadow 0 3px 10px black
    transition all 0.5s ease
    animation DropInFade 0.5s ease

    .results&
      margin-top 50px
      margin-bottom 10px

  > span
    display inline-block
    overflow hidden
    vertical-align top
    transition all 0.5s ease
    width 215px
    opacity 1
    @extend .slideUpFade

    > span
      display inline-block
      width 215px

    .results&
      width 0
      opacity 0

  input
    overflow hidden
    background transparent
    color white
    text-shadow 0 1px 5px rgba(0, 0, 0, 0.6)
    transition all 0.5s ease
    font-family 'Lato', sans-serif
    font-weight 300
    font-size 52px
    font-style italic
    border none
    border-bottom 3px dotted white
    outline none
    width 520px
    @extend .slideUpFade

    .results&
      width 740px

    &:-moz-placeholder
      color rgba(255, 255, 255, 0.7)
      font-weight 100
      text-shadow 0 1px 5px black
    &::-webkit-input-placeholder
      color rgba(255, 255, 255, 0.7)
      font-weight 100
      text-shadow 0 1px 5px black
    &:-ms-input-placeholder
      color rgba(255, 255, 255, 0.7)
      font-weight 100
      text-shadow 0 1px 5px black

  a
    color rgba(255, 255, 255, 0.5)
    font-weight 300
    transition all 0.5s ease
    display inline-block
    cursor pointer
    opacity 0
    pointer-events none

    &:hover
      color white

    .valid&
      opacity 1
      pointer-events auto

  p
    font-size 20px
    font-weight 300
    padding-top 20px
    position absolute
    width 100%
    @extend .slideUpFade
    transition all 0.5s ease
    pointer-events none

    .valid&
      opacity 0

  .go
    margin-top 15px
    display block
    position absolute
    width 100%

    .results&
      opacity 0

  .cancel
    position relative
    left -30px
    width 0
    font-weight 100
    color rgba(255, 255, 255, 0.7)
